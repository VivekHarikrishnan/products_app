<h5>Create a Book</h5>
<div class="row">
	<div>
		<%= form_for(@book, remote: true) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :author %>
			<%= f.text_field :author %>

			<%= f.label :description %>
			<%= f.text_area :description, cols: "10", rows: 3 %>

			<%= f.label :price %>
			<%= f.text_field :price %>

			<br />
			<%= f.submit "Create Book", class: "btn btn-medium btn-primary" %>
		<% end %>
	</div>
</div>