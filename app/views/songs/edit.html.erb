<h1>Update Song details</h1>
<div class="row">
	<div>
		<%= form_for(@song) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :album %>
			<%= f.text_field :album %>

			<%= f.label :artist %>
			<%= f.text_field :artist %>
			<br />
			<%= f.submit "Update Song", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>